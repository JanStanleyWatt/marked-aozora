{
    "name": "marked-aozora",
    "version": "0.1.1",
    "description": "Add Aozora Bunko style ruby support to marked.js",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "debug": "MARKED_AOZORA_DEBUG_VERBOSE=1 ts-node-esm ./src/debug.ts",
        "example": "ts-node-esm ./src/example.ts",
        "build": "tsc",
        "prepare": "npm run build",
        "test": "jest"
    },
    "keywords": [
        "marked",
        "markdown",
        "plugin",
        "furigana"
    ],
    "repository": {
        "type": "github",
        "url": "https://github.com/JanStanleyWatt/marked-aozora"
    },
    "bugs": {
        "url": "https://github.com/JanStanleyWatt/marked-aozora/issues"
    },
    "author": "Jan Stanley Watt",
    "license": "Apache-2.0",
    "peerDependencies": {
        "marked": "^5.1.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@types/marked": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-redos": "^4.4.5",
        "eslint-plugin-security": "^1.7.1",
        "jest": "^29.5.0",
        "marked": "^5.1.0",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "files": [
        "dist/index.js",
        "dist/index.d.ts",
        "dist/lib",
        "package.json",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">= 18"
    }
}
